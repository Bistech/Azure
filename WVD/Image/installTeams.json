{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "location" : {
            "type": "string"
        },
        "hostType" : {
            "type": "string",
            "allowedValues": [
                "MultiSession",
                "SingleSession"
            ],
            "defaultValue": "MultiSession",
            "metadata": {
                "description": "The OS type for the VM. EVD is Multi-Session, ENT is Enterprise (Single Session), o365pp is the image installed with the M365 Apps"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2018-06-01",
            "name": "[concat(parameters('vmName'), '/PSExtensionInstall')]",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.7",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "https://raw.githubusercontent.com/Bistech/Azure/master/WVD/Image/CustomScriptExtensions/installTeams.ps1"
                    ],
                    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File installTeams.ps1 ', parameters('hostType'))]"
                }
            }
        }
    ],
    "outputs": {}
}
